@model Auction

<div class="row">
    <div class="col-md-8">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Start" class="form-label"></label>
                <input asp-for="Start" class="form-control" type="datetime-local" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ImagePath" class="form-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PdfPath" class="form-label"></label>
                <input asp-for="PdfPath" class="form-control" />
                <span asp-validation-for="PdfPath" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="AgentName" class="form-label"></label>
                <input asp-for="AgentName" class="form-control" />
                <span asp-validation-for="AgentName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="District" class="form-label"></label>
                <input asp-for="District" class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="OpeningPrice" class="form-label"></label>
                <input asp-for="OpeningPrice" class="form-control" />
                <span asp-validation-for="OpeningPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Url" class="form-label"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="IsDeleted" class="form-check-input" />
            <label asp-for="IsDeleted" class="form-check-label"></label>
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="IsPermanentlyDeleted" class="form-check-input" />
            <label asp-for="IsPermanentlyDeleted" class="form-check-label"></label>
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>

